<process-application
xmlns="http://www.camunda.org/schema/1.0/ProcessApplication"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <process-engine name="orderProcessEngine">
    <configuration>io.oasp.gastronomy.restaurant.general.configuration.CamundaProcessEngingeConfiguration</configuration>
  </process-engine>
  <process-engine name="anotherProcessEngine">
    <configuration>io.oasp.gastronomy.restaurant.general.configuration.CamundaProcessEngingeConfiguration</configuration>
  </process-engine>

  <process-archive name="orderProcess">
    <process-engine>orderProcessEngine</process-engine>
    <properties>
      <property name="isDeleteUponUndeploy">false</property>
      <property name="isScanForProcessDefinitions">true</property>
    </properties>
  </process-archive>

</process-application>
